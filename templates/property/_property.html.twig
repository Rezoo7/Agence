<div class="card mb-4">
    {% if property.filename %}
        <img src="{{vich_uploader_asset(property,'imageFile') | imagine_filter('thumb') }}" alt="card-img-top" style="width: 100%;height: auto">
    {% endif %}
    <div class="card-body">
        <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}" style="   ">
       <button class="btn btn-outline-primary">
        <h5 class="card-title">{{ property.title }} , {{ property.surface }}m² </h5>
       </button>
        </a>
        <p></p>
        <p class="card-text"> {{ property.address }}</p>
        <p class="card-text"> {{ property.description | nl2br }}</p>


       <!-- <p class="card-text">
         {#  {% for opt in options %}
            {{ property.options }}
            {% endfor %}
            #}
        </p>
        -->

        <div class="text-primary" style="font-size: 2rem; font-weight: bold">
            {{ property.formattedPrice }} €
        </div>
    </div>
</div>