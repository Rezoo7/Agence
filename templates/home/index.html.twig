{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}{% endblock %}

{% block body %}
    <body>
        <div class="jumbotron text-center">
            <h1> Agence Lorem </h1>
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusamus asperiores, aspernatur at, cumque
                distinctio earum fuga harum impedit inventore molestiae officiis omnis perferendis provident quae quo
                reiciendis sed velit voluptates!
            </p>
        </div>


        <div class="container">
            <h2>Les Derniers Biens</h2>
            <div class="row flex">
                {% for property in properties %}
                    <div class="col-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="{{ path('property.show',{id: property.id, slug: property.slug}) }}">{{ property.title }}</a>
                                </h5>
                                <p class="card-text">{{ property.city }} - ({{ property.postalCode }})</p>
                                <div class="text-primary" style="font-weight: bold;font-size: 2rem;"> {{ property.formattedPrice}}€</div>
                                <!-- number_format => 0 chiffres apres la virgule , ' ' séparation décimales, ' ' séparatoion des milliers  -->
                            </div>
                        </div>
                    </div>

                {% endfor %}
            </div>
        </div>
    </body>
{% endblock %}
