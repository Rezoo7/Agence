{{ form_start(form) }}
<fieldset>
    <div class="row">
        <div class="col md-4">{{ form_row(form.title) }}</div>
        <div class="col md-4">{{ form_row(form.surface) }}</div>
        <div class="col md-4">{{ form_row(form.price) }}</div>
        <div class="col md-4 mt-auto" style="font-size: 18px"> {{ form_row(form.sold) }}</div>
    </div>
</fieldset>
<br>
<div class="row">
    <div class="col md-2"> {{ form_row(form.rooms) }}</div>
    <div class="col md-2"> {{ form_row(form.bedrooms) }}</div>
    <div class="col md-2"> {{ form_row(form.heat) }}</div>
    <div class="col md-2"> {{ form_row(form.floor) }}</div>
</div>
<br>
<div class="row">
    <div class="col md-5"> {{ form_row(form.address) }}</div>
    <div class="col md-5"> {{ form_row(form.city) }}</div>
    <div class="col md-5"> {{ form_row(form.postal_code) }}</div>
</div>
<div class="row">
    <div class="col md-5"> {{ form_row((form.options)) }}</div>
    <div class="col md-5"> {{ form_row(form.imageFile) }}</div>
</div>
<div class="row">
    <div class="col md-5"> {{ form_row((form.description)) }}</div>
</div>
<button class="btn btn-primary"> {{ button| default('Enregistrer') }} </button>

{{ form_end(form) }}


